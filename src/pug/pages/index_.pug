extends ../layout/base

block variables
	- var title='Оказане услуг по ремонту автомобилей |ViaMotors| Беларусь';
	- var description='Оказане услуг по ремонту автомобилей |ViaMotors| Беларусь';
	- var pageClass='index-page';

block content

	section.index-hero
		.container
			.index-hero__content
				.index-hero__desc
					p Шиномонтаж от 38 руб
				.index-hero__desc
					p Заправка кондиционера от 25 руб
				.index-hero__desc
					p Замена колодок 25 руб
				.index-hero__desc
					p Скидка на запчасти 10%
				.index-hero__desc
					h1 Проточка тормозных дисков от 20 руб

	section.services
		.container
			+section-title('Услуги автосервиса')
			.services-wrapper
				include ../../pug/includes/modules/to-1
				include ../../pug/includes/modules/to-2
				include ../../pug/includes/modules/to-3
				include ../../pug/includes/modules/to-4
				include ../../pug/includes/modules/to-5
	section.benefits
		.container
			+section-title('Почему мы')
			include ../../pug/includes/modules/benefits
	section.help
		.bg-shadow
		.container
			+section-title('Бесплатная консультация')
			.help-phones
				include ../../pug/includes/modules/phones-list
	section.auto
		.container
			+section-title("Мы обслуживаем авто")
			.auto-content
				.auto-wrapper
					.auto__img-wrap
						img(src='./assets/img/auto.jpg')

	section.map
		.container
			+section-title("Мы находимся")
			#map
				.map-wrapper
					<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d928.3227249398581!2d27.439185380291548!3d53.95024803715498!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x46dbc527d8af8aa1%3A0x5cdc93bb7c02e557!2sVIAMOTORS!5e0!3m2!1sru!2sby!4v1664699574370!5m2!1sru!2sby" width="100%" height="460" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>



